<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="@dimen/px_720">
        <RelativeLayout
            android:id="@+id/re_sort1"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_54"
            android:tag="tag_1"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/sort1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/text_color_gey"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="全年龄"/>
            <ImageView
                android:id="@+id/img_sort1"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_54"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/px_54"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="@dimen/px_1"></View>
        <RelativeLayout
            android:id="@+id/re_sort2"
            android:tag="tag_2"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/sort2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/text_color_gey"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="1-3岁"/>
            <ImageView
                android:id="@+id/img_sort2"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_54"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/px_54"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="@dimen/px_1"></View>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/re_sort3"
            android:tag="tag_3"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/sort3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/text_color_gey"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="3-6岁"/>
            <ImageView
                android:id="@+id/img_sort3"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_54"/>
        </RelativeLayout>
        <View
            android:visibility="gone"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="@dimen/px_1"></View>
        <RelativeLayout
            android:id="@+id/re_sort4"
            android:tag="tag_4"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/sort4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/text_color_gey"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="3-6岁"/>
            <ImageView
                android:id="@+id/img_sort4"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_54"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/px_54"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="@dimen/px_1"></View>
        <RelativeLayout
            android:id="@+id/re_sort5"
            android:tag="tag_5"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/sort5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/text_color_gey"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="6-12岁"/>
            <ImageView
                android:id="@+id/img_sort5"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_54"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/px_54"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="@dimen/px_1"></View>
        <RelativeLayout
            android:id="@+id/re_sort6"
            android:tag="tag_6"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px_54"
            android:layout_height="@dimen/px_80">
            <TextView
                android:id="@+id/sort6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_28_px"
                android:textColor="@color/text_color_gey"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="12岁以上"/>
            <ImageView
                android:id="@+id/img_sort6"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/check_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_54"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="@dimen/px_54"
            android:layout_width="match_parent"
            android:background="@color/line"
            android:layout_height="@dimen/px_1"></View>
    </LinearLayout>

</ScrollView>