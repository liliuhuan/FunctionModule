<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liliuhuan.com.simplyskill.anime.AnimationListActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="逐帧动画"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <Button
       android:id="@+id/xml_action"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="xml_action"/>
    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="stop"/>
    <Button
        android:id="@+id/java_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="java_action"/>
    <ImageView
        android:id="@+id/action_image"
        android:src="@drawable/animation_list"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
      />
</LinearLayout>
