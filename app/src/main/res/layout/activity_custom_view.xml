<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liliuhuan.com.simplyskill.widget.activity.LQRRefreshActivity">
    <LinearLayout
        android:layout_width="368dp"

        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <com.liliuhuan.com.simplyskill.widget.LQRRefreshButton
            android:id="@+id/btn_refresh"
            android:layout_width="118dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="8dp"
            app:refresh_btn_borderRadius="6dp"
            app:refresh_btn_borderWidth="1dp"
            app:refresh_btn_iconSize="16dp"
            app:refresh_btn_text="点击换一批"
            app:refresh_btn_textColor="#FF55FF"
            app:refresh_btn_textSize="14sp"/>
        <Button
            android:id="@+id/stop"
            android:text="stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
